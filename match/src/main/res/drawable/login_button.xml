<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle" >
            <stroke
                android:width="0dp"
                android:color="#80ea3535" />
            <corners
                android:radius="50dp"/>
            <gradient
                android:startColor="#80ea3535"
                android:endColor="#80ff754b"
                android:angle="45" />
        </shape>
    </item>

    <item  >
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
               android:shape="rectangle" >
            <stroke
                android:width="0dp"
                android:color="#ea3535" />
            <corners
                android:radius="50dp"/>
            <gradient
                android:startColor="#ea3535"
                android:endColor="#ff754b"
                android:angle="45" />

        </shape>
    </item>

</selector>