<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android"
       >

    <TextView android:id="@+id/tv_trade_follow_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/buy_follow"
        android:gravity="center" android:clickable="true"
        android:paddingBottom="6dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="6dp"
        android:text="策略跟买"
        android:textColor="@color/white"
        android:textSize="14sp"/>

    <TextView android:id="@+id/tv_follow_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/buy_follow_s"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="6dp"
        android:text="跟买"
        android:textColor="@color/white"
        android:textSize="14sp"/>

    <TextView android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@drawable/buy_follow_c"
        android:drawableLeft="@drawable/stock_comment"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingBottom="6dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="6dp"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"/>
</merge>