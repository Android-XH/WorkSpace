<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_alignParentBottom="true"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3e3e3" />
    <RadioGroup
        android:id="@+id/rg_main_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/main_menu"
            android:drawableTop="@drawable/home_drawable"
            android:layout_height="match_parent"
            android:checked="true"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_match"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/match_drawable"
            style="@style/main_menu"
            android:text="比赛" />

        <RadioButton
            android:id="@+id/rb_drill"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/drill_drawable"
            style="@style/main_menu"
            android:text="训练" />

        <RadioButton
            android:id="@+id/rb_stock"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/stock_drawable"
            style="@style/main_menu"
            android:text="自选股" />
        <RadioButton
            android:id="@+id/rb_mine"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/mine_drawable"
            style="@style/main_menu"
            android:text="我的" />
    </RadioGroup>
</LinearLayout>