<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout style="@style/home_yield_layout">

        <TextView
            style="@style/home_yield_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上证指数" />

        <TextView
            android:id="@+id/tv_sh_num"
            style="@style/home_yield_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3379.72" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sh_yield_num"
                style="@style/home_yield_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+17.23" />

            <TextView
                android:id="@+id/tv_sh_yield"
                style="@style/home_yield_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+17.00%" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/home_yield_layout">

        <TextView
            style="@style/home_yield_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="深圳指数" />

        <TextView
            android:id="@+id/tv_sz_num"
            style="@style/home_yield_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3379.72" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sz_yield_num"
                style="@style/home_yield_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+17.23" />

            <TextView
                android:id="@+id/tv_sz_yield"
                style="@style/home_yield_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+17.00%" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout style="@style/home_yield_layout">

        <TextView
            style="@style/home_yield_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创业板指" />

        <TextView
            style="@style/home_yield_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_cy_num"
            android:text="3379.72" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/home_yield_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_cy_yield_num"
                android:text="+17.23" />

            <TextView
                style="@style/home_yield_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_cy_yield"
                android:text="+17.00%" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>